<div class="container">
  <div class="card">

    <%= simple_form_for(@review, url: restaurant_reviews_path(@restaurant)) do |f| %>
    <%= f.error_notification %>

    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.button :submit, class: "btn btn-success" %>
    <% end %>

  </div>
    <%= link_to 'Back', restaurants_path(@restaurant), class: "btn btn-primary"  %>
</div>
