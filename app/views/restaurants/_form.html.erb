<div class="container">
  <div class="card">

    <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.button :submit, class: "btn btn-success" %>
    <% end %>

  </div>
    <%= link_to 'Back', restaurants_path(@restaurant), class: "btn btn-primary"  %>
</div>
